<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <LangVersion>8</LangVersion>
        <Nullable>enable</Nullable>
    </PropertyGroup>

    <ItemGroup>
        <Folder Include="Generated\**\*"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="DbModelGenerator" Version="0.2.4"/>
        <PackageReference Include="Microsoft.Extensions.Http" Version="3.0.0"/>
    </ItemGroup>

    <Target Name="Generate Db Model" BeforeTargets="BeforeBuild">
        <!-- EntityInterface (optional) -->
        <!-- PrimaryKeyAttribute (optional) -->
        <!-- AutoIncrementAttribute (optional) -->
        <!-- Suffix (optional) -->
        <!-- By default SQL scripts will be searched into Scripts project sub-folder -->
        <!-- By default classes will be generated into Generated project sub-folder -->
        <GenerateDbModel
                EntityInterface="Example.Service.IEntity"
                PrimaryKeyAttribute="Example.Service.PrimaryKey"
                AutoIncrementAttribute="Example.Service.AutoIncrement"
                Suffix="Db"
        />
    </Target>

</Project> 